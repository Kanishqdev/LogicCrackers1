<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ba5958da1e57b955be0e8c198401b1d8"
    tools:context="com.calculator.kanis.logiccrackers.hardgame">

    <ImageView
        android:id="@+id/cir2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/edity0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sub"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="163dp"
        android:layout_marginEnd="59dp"
        android:hint="Enter Value"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edity0"
        android:layout_alignTop="@+id/edity0"
        android:layout_marginTop="20dp"
        android:hint="Enter Value"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edity0"
        android:layout_alignTop="@+id/edit1"
        android:layout_marginTop="28dp"
        android:hint="Enter Value"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="15dp" />
    <EditText
        android:id="@+id/edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit2"
        android:layout_alignTop="@+id/edit2"
        android:layout_marginTop="25dp"
        android:hint="Enter Value"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="15dp" />

    <Button
        android:id="@+id/sub"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="73dp"
        android:text="NEXT" />

</RelativeLayout>
